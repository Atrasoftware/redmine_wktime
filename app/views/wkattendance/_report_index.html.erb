<%= javascript_include_tag 'index', :plugin => "redmine_wktime" %>
<%= stylesheet_link_tag 'wk-time', :plugin => "redmine_wktime" %>
<script type="text/javascript"> 
	prevTab = 'tab-<%= "wkattnreport" %>';
</script>
<%= form_tag({:controller => controller_name, :action => 'report'}, :method => :get, :id => 'query_form') do %>
<div style="clear:both"></div>
<table>
<tr>
<%
	report_type = session[:wkattnreport][:report_type]
%>
<th><%= l(:label_report) + " " + l(:field_type) %> </th>
<td><%= select_tag 'report_type', options_for_report_select(report_type),
                         :onchange => 'this.form.submit();', :style=> "width:200px;" %></td>
</tr>
</table>
<%= render :partial => 'wkattendance/date_range' %>
<% if report_type == 'attendance_report' || report_type.blank?%>
	<%= render :partial => 'wkattendance/list_attn_report'%>
<%end%>
<%=h hidden_field_tag('tab', "wkattnreport") %>
<%= hidden_field_tag "searchlist", "wkattnreport" %>
<% end %>